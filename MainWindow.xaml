<Window x:Class="PicEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicEditor"
        mc:Ignorable="d"
        Title="图片编辑器" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="文件">
                <MenuItem Header="打开" Click="OpenImage_Click"/>
                <MenuItem Header="保存" Click="SaveImage_Click"/>
            </MenuItem>
            <MenuItem Header="编辑">
                <MenuItem Header="旋转" Click="RotateImage_Click"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- 图片显示区域 -->
            <Border x:Name="ImageContainer"
                    Grid.Column="0" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    Margin="10"
                    ClipToBounds="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ScrollViewer Grid.Row="0" 
                                HorizontalScrollBarVisibility="Auto" 
                                VerticalScrollBarVisibility="Auto">
                        <Viewbox Stretch="Uniform">
                            <Grid>
                                <Image x:Name="MainImage" 
                                       Stretch="None"
                                       RenderTransformOrigin="0.5,0.5"/>
                            </Grid>
                        </Viewbox>
                    </ScrollViewer>
                    
                    <TextBlock Grid.Row="1" 
                             Text="图片显示区域" 
                             HorizontalAlignment="Center" 
                             Margin="0,5" 
                             Foreground="Gray"/>
                </Grid>
            </Border>

            <!-- 分隔线 -->
            <GridSplitter Grid.Column="1" 
                         Width="5" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Stretch"
                         Background="LightGray"/>

            <!-- 操作区域 -->
            <Border Grid.Column="2" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    Margin="10">
                <StackPanel Margin="10">
                    <TextBlock Text="操作区域" 
                             HorizontalAlignment="Center" 
                             Margin="0,0,0,10" 
                             Foreground="Gray"/>
                    
                    <TextBlock Text="缩放" Margin="5"/>
                    <Slider x:Name="ScaleSlider" 
                            Minimum="0.1" 
                            Maximum="3" 
                            Value="1" 
                            SmallChange="0.1"
                            LargeChange="0.5"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="True"
                            ValueChanged="ScaleSlider_ValueChanged"/>
                    
                    <TextBlock Text="旋转" Margin="5"/>
                    <Slider x:Name="RotateSlider" 
                            Minimum="0" 
                            Maximum="360" 
                            Value="0"
                            SmallChange="1"
                            LargeChange="90"
                            TickFrequency="45"
                            IsSnapToTickEnabled="True"
                            ValueChanged="RotateSlider_ValueChanged"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Button x:Name="RotateLeftButton" 
                                Content="↺ 左转90°" 
                                Margin="0,5,5,0" 
                                Click="RotateLeftButton_Click"/>
                        <Button x:Name="RotateRightButton" 
                                Content="↻ 右转90°" 
                                Margin="5,5,0,0" 
                                Click="RotateRightButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
